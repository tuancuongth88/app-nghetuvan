<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <consultant.com.haiphat.consultant.utils.RippleView
        android:id="@+id/rippleItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imgInfoAccount"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/ic_nav_contact"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvInfoAccount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:ellipsize="end"
            android:fontFamily="sans-serif"
            android:maxLines="1"
            android:textSize="15sp"
            android:textColor="@color/textLabel"
            android:textStyle="normal"
            app:layout_constraintBottom_toBottomOf="@+id/imgInfoAccount"
            app:layout_constraintEnd_toStartOf="@+id/imgInfoNext"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintStart_toEndOf="@+id/imgInfoAccount"
            app:layout_constraintTop_toTopOf="@+id/imgInfoAccount"
            tools:text="Trang chá»§" />

    </consultant.com.haiphat.consultant.utils.RippleView>
</layout>
