<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <haiphat.com.bds.nghetuvan.utils.RippleView
        android:id="@+id/rippleItem"
        style="@style/wrapContent"
        android:padding="5dp">

        <android.support.constraint.ConstraintLayout
            android:id="@+id/clContent"
            style="@style/wrapContent">

            <ImageView
                android:id="@+id/imgProjectWarehouse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_defaul_bg_my_course" />

            <View
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:background="@drawable/gradient_buttom"
                app:layout_constraintBottom_toBottomOf="parent" />

            <TextView
                android:id="@+id/tvName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                tools:text="Tin tức chung"
                android:textColor="@color/colorWhite"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

        </android.support.constraint.ConstraintLayout>

        <TextView
            android:id="@+id/txtType"
            style="@style/matchWrap"
            android:text="chung cư"
            android:textColor="@color/textLabel"
            app:layout_constraintTop_toBottomOf="@id/clContent" />

        <TextView
            android:id="@+id/txtLocation"
            style="@style/matchWrap"
            android:text="Hà nội"
            android:textColor="@color/textLabel"
            app:layout_constraintTop_toBottomOf="@id/txtType" />
    </haiphat.com.bds.nghetuvan.utils.RippleView>

</layout>
